{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "WreckfestController.Services.ServerManager": "Debug",
      "WreckfestController.Services.PlayerTracker": "Information"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Urls": "http://0.0.0.0:5100;https://0.0.0.0:5101"
  },
  "UseKestrel": true,
  "WreckfestServer": {
    "ServerPath": "<path-to-wreckfest-server>\\Wreckfest_x64.exe",
    "ServerArguments": "-s server_config=server_config.cfg",
    "WorkingDirectory": "<path-to-wreckfest-server>",
    "LogFilePath": "<path-to-wreckfest-server>\\log.txt"
  },
  "SteamCmd": {
    "SteamCmdPath": "<path-to-steamcmd>\\steamcmd.exe",
    "WreckfestAppId": "361580",
    "InstallDirectory": "<path-to-wreckfest-server>"
  },
  "Laravel": {
    "WebhookBaseUrl": "https://your-laravel-app.com/api/webhooks"
  }
}
